<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <!-- 主页分隔线 -->
    <style name="HomeDivider">
       	<item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
         <item name="android:background">#fff</item>
          <item name="android:layout_marginTop">10dp</item>
          <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    
   <!-- 分割线   -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e7e7e7</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
   <!-- 大分割线 -->
    <style name="BigDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#d8d8d8</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <!-- 设置界面图标 -->
    <style name="SettingActivityIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.2</item>
    </style>
    <!-- 设置界面LinearLayout -->
    <style name="SettingActivityLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/setting_view_selector</item>
        <item name="android:clickable">true</item>
    </style>
    <!--  订单界面 -->
    <string name="OrderTabLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.2</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    	<item name="android:background">@drawable/setting_view_selector</item>
        <item name="android:clickable">true</item>
    </string>
    
    
    <!-- 设置界面文字 -->
	<style name="SettingActivity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        
        <item name="android:layout_weight">0.7</item>
	    <item name="android:textColor">#000000</item>
	    <item name="android:textSize">22sp</item>
	    <item name="android:gravity">center_vertical</item>
	</style>
    
    <!-- 设置界面详细图标 -->
    <style name="SettingActivityDetail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:contentDescription">detail</item>
    </style>
    
    <!-- 登录输入框 -->
    <style name="LoginActivityEditView">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/login_editview_corners</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">5dp</item>
        
    </style>
    <!-- ////查询界面 -->
    <!-- ////TextView -->
    <style name="Search4NoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- ////RelativeLayout  -->
    <style name="SearchLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>
    <!-- ////送货单号输入框 -->
    <style name="Search4NoView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:inputType">text</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/editview_corners</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>
    <!-- ////时间查询 -->
    <style name="DateSearch4NoView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:inputType">text</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- 订单页面设置界面LinearLayout -->
    <style name="OrderListActivityLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/setting_view_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">15dp</item>
       
    </style>
    <!-- 订单详情 -->
    <style name="OrderListDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#9b9b9b</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>    
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>
</resources>
