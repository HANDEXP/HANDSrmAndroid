<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_view_selector"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <TextView 
        android:id="@+id/po_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="1103005127"
        android:clickable="false"/>
	<TextView
	    android:id="@+id/release_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#000000"
	    android:textSize="16sp"
	    android:layout_marginTop="5dp"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:text="17:15"
	    android:clickable="false"/>
	<TextView
	    android:id="@+id/vendor_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#000000"
	    android:textSize="16sp"
	    android:layout_marginTop="15dp"
	    android:layout_below="@+id/po_num"
	    android:text="上海半程医药股份有限公司"
	    android:clickable="false"
	 />
	<TextView
	    android:id="@+id/srm_status"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#000000"
	    android:textSize="16sp"
	    android:layout_marginTop="15dp"
	    android:layout_below="@+id/release_time"
	    android:layout_alignParentRight="true"
	    android:text="已确认"
	    android:clickable="false"/>
	<TextView 
	    android:id="@+id/total_amount"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textStyle="normal"
	    android:textColor="#000000"
	    android:textSize="16sp"
	    android:layout_marginTop="15dp"
	    android:layout_below="@+id/vendor_name"	 
	    android:text="¥1500"  
	    android:clickable="false" />
</RelativeLayout>
