<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="5dp"
    android:paddingTop="20dp"
    android:paddingLeft="5dp" >

    <TextView
        android:id="@+id/itemCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01010-80610"
        android:textColor="#9b9b9b" >
    </TextView>

    <TextView
        android:id="@+id/itemDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemCodeTextView"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="10dp"
        android:text="TEST"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/priceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/itemCodeTextView"
        android:layout_below="@+id/itemDescTextView"
        android:text="@string/price"
        android:textColor="#9b9b9b"
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/priceTitle"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/priceTitle"
        android:text="¥20"
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/amountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/priceTitle"
        android:layout_marginLeft="50dp"
        android:textColor="#9b9b9b"
        android:layout_toRightOf="@+id/priceTextView"
        android:text="@string/amount"
        android:textSize="12sp" >
    </TextView>
    
    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/priceTitle"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/amountTitle"
        android:text="¥20"
        android:textSize="12sp" >
    </TextView>


    
    <TextView
        android:id="@+id/totalAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/priceTitle"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:text="¥400"
        android:textSize="12sp" >
    </TextView>
    <View 
        style="@style/Divider"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/totalAmountTextView"/>
</RelativeLayout>