<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bkblue"
        android:id="@+id/receiveDetailTitle"
        >
        <TextView
            android:id="@+id/backTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_textview_selector"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/back"
            android:textColor="@color/white">
            
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:text="订单列表"
            android:textColor="@color/white">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:paddingBottom="15dp" >

        <TextView
            android:id="@+id/locationNameTitle"
            style="@style/OrderListDetail"
            android:text="@string/locationName" >
        </TextView>

        <TextView
            android:id="@+id/locationNameTextView"
            style="@style/OrderListDetail"
            android:layout_toRightOf="@+id/locationNameTitle">
        </TextView>

        <TextView
            android:id="@+id/consignerOrganizationTitle"
            style="@style/OrderListDetail"
            android:layout_below="@+id/locationNameTitle"
            android:text="@string/consignerOrganization" >
        </TextView>

        <TextView
            android:id="@+id/consignerOrganizationTextView"
            style="@style/OrderListDetail"
            android:layout_below="@+id/locationNameTextView"
            android:layout_toRightOf="@+id/consignerOrganizationTitle">
        </TextView>


    </RelativeLayout>
	<ListView
	    android:id="@+id/listDetail"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
	</ListView>
</LinearLayout>